extends layout

block content
  h1= title
  - let id = toShow._id
  - let brand = toShow.brand
  - let model = toShow.model
  - let cost = toShow.cost
  - let color = toShow.color

  div.row(class='mb-2')
    div.mr-1 ID is
    div #{id}
  - let actionid = "/resource/mobilePhones/" + id

  form(id='MobilePhoneForm', action="actionid", method="PUT")
    div.form-group
        label.costumeAttr(for='brand') Mobile Phone Brand
        input#brand(type='text', name='brand' value=brand)
    div.form-group
        label.costumeAttr(for='model') Mobile Phone Model
        input#model(type='text', name='model' value=model)
    div.form-group
        label.costumeAttr(for='cost') Mobile Phone Cost
        input#cost(type='number', name='cost' value=cost)
    div.form-group
        label.costumeAttr(for='color') Mobile Phone Color
        input#color(type='text', name='color' value=color)
    input(type="submit")

  script.
    document.forms['MobilePhoneForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Save succeded")
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Save failed " + error )
      });
    });

