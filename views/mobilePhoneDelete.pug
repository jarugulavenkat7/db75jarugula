extends layout

block content
  h1= title

  if (toShow == null)
    h2 No instance to delete
  else
    - let id = toShow._id
    - let brand = toShow.brand
    - let model = toShow.model
    - let cost = toShow.cost
    - let color = toShow.color
    - let actionid = "/resource/mobilePhones/" + id
    script let actionid = "#{actionid}"
    div
      div.row
        div(class='costumeAttr mr-3') Mobile Phone ID is:
        div #{id}
      div.row
        div(class='costumeAttr mr-3') Mobile Phone brand is:
        div #{brand}
      div.row
        div(class='costumeAttr mr-3') Mobile Phone model is:
        div #{model}
      div.row
        div(class='costumeAttr mr-3') Mobile Phone cost is:
        div #{cost}
      div.row
        div(class='costumeAttr mr-3') Mobile Phone color is:
        div #{color}

    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

  script.
    function cancel() {
      // Go back to the home page for the costume collection
      window.location.href='/mobilePhones'
    }
  script.
    function deleteOnid() {
      console.log("starting delete")
      // delete first
      fetch(actionid, {
        method: 'DELETE'      // Don't need a body for the delete
      }).then((resp) => {
        return resp.text() //or whatever the server sends
      }).then((body) => {
        alert("Delete succeded")
        window.location.href='/mobilePhones'
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Delete failed " + error )
      });
    }
